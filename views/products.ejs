<!DOCTYPE html>
<html>
<head>
  <title>eCommerce</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <!-- Navbar -->
  <%- include('navbar') %>

  <!-- Contenido principal -->
  <div class="main-content">
    <div class="producto">
      <h1 class="text-center text-light pt-5"> <%= category.toLowerCase() %> </h1>
      <div class="container ">
        <div class="row py-5">
          <% products.forEach(product => { %>
          <div class="col-sm-6 col-md-4 col-lg-3 p-2 "> 
            <div class="card text-center" style="background-color: rgba(8, 9, 17, 0.705);" >
              <a href="" class="text-light">
                <img src="/images/<%= category.toLowerCase() %>.jpg" class="card-img-top" alt="">
                <div class="card-body" style="height: 130px;">
                  <h4><%= product.name %></h4>
                  <p><%= product.price %> USD</p>
                </div>
              </a>
              <form action="/addToCart" class="mb-3" method="POST" style="height: 50px;">
                <input type="hidden" name="productId" value="<%= product.id %>">
                <button type="submit" class="btn btn-outline-light">Comprar</button>
                <button type="submit" class="btn btn-outline-light">Ver</button>
              </form>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
  

  <!-- Incluye el footer -->
  <%- include('footer') %>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
