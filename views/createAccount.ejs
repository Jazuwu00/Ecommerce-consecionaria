<!DOCTYPE html>
<html>
<head>
  <title>eCommerce</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-UGjQ8auVK5cC+BXyfnuX9aDfG7E5BVBQHs3zvqdb1VxXc29yfBCZ3QygyL8zWOrC3CkzR/PT8rSxumzakJT1Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
  <!-- Navbar -->
  <%- include('navbar') %>

   <!-- Contenido principal -->
 
   <div class="main-content  " style="padding-top: 20%;">
    <div class="container py-2">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card  text-white" style=" background-color: #0E0E0E;">
            <div class="card-body p-5 text-center">
  
              <div class="mb-md-5 mt-md-4 pb-3">
        
                  
                
                <form action="/createAccount" method="POST"> 
  
                  <h2 class="fw-bold mb-2 text-uppercase">Crea tu cuenta</h2>
                  <p class="text-white-50 mb-5">Completa tus datos</p>
  
                  <div class="row">
                    <div class="col-6 form-outline form-white mb-4">
                      <label class="form-label" for="nombre">Nombre</label>
                      <input type="text" id="name" name="nombre" required class="form-control form-control-md" />
                    </div>
                    <div class="col-6  form-outline form-white mb-4">
                      <label class="form-label" for="apellido">apellido</label>
                      <input type="text" id="apellido" name="apellido" required class="form-control form-control-md" />
                    </div>
                  </div>
                  <div class="form-outline form-white mb-4">
                    <label class="form-label" for="nick">usuario</label>
                    <input type="text" id="nick" name="nick" required class="form-control form-control-md" />
                  </div>
                  <% if (Wrongmessage  == 'Correo electrónico ya registrado' ) { %>
                    <p class=" p-3 mx-auto text-center text-light" style="background-color: rgb(110, 43, 43);"> <%= Wrongmessage %></p>
                  <% } %>
                  <div class="form-outline form-white mb-4">
                    <label class="form-label" for="email">email</label>
                    <input type="email" id="email" name="email" required class="form-control form-control-md" />
                  </div>
  
  
                  <div class="form-outline form-white mb-4 " style="position: relative;">
                    <label class="form-label" for="contrasenia">Contraseña</label> 
                    <input  type="password" id="contrasenia" name="contrasenia" required class=" form-control form-control-md" />
                    <div class="" style="position: absolute; top: 55%; left:90%;"  onclick="mostrarContrasena()"><i class=" bi-eye text-dark"></i></div>
                  </div>


                  <button class="btn btn-outline-light btn-lg px-5" type="submit">Crear cuenta</button>
  
                </form>
              </div>
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  
 


  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    function mostrarContrasena(){
      var tipo = document.getElementById("contrasenia");
      var icon = document.querySelector("[onclick='mostrarContrasena()'] i");

      if(tipo.type == "password"){
          tipo.type = "text";
          icon.classList.remove("bi-eye");
            icon.classList.add("bi-eye-slash");
      }else{
          tipo.type = "password";
          icon.classList.remove("bi-eye-slash");
            icon.classList.add("bi-eye");
      }
  }
  </script>
  <!-- Footer -->
  <!-- Incluye el footer -->
  <%- include('footer') %>
</body>
</html>
