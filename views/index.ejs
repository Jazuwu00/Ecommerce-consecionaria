<!DOCTYPE html>
<html>
<head>
  <title>eCommerce</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-UGjQ8auVK5cC+BXyfnuX9aDfG7E5BVBQHs3zvqdb1VxXc29yfBCZ3QygyL8zWOrC3CkzR/PT8rSxumzakJT1Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
  <!-- Navbar -->
 
  <%- include('navbar') %>
  <%  var index = 0; %>

   <!-- Contenido principal -->
 
  <div class="main-content">
    <h3 class="text-center my-5">Nuestros productos</h3>
    <div id="carouselExampleIndicators" class="carousel slide bg" data-ride="carousel">
      

      <div class="carousel-inner w-50  mx-auto" >
         
          <% autos.forEach(auto => { %>
            <% if (index === 0) { %>
              <div class="carousel-item active "  >
                <% index++ %>
              <% } else { %>
                <div class="carousel-item "> 
                 
              <% } %>
              <div class="row">
                <div class="col-6 ">
                  <% if (auto.img instanceof Buffer && auto.img.length > 0) { %>
                    <img src="data:image/jpg;base64, <%= Buffer.from(auto.img).toString('base64') %>"   alt="<%= auto.marca %>" height="200px" width="300px">
                      <% } else { %>
                        <img src="images/autos/chevrolet.jpg"  alt="<%= auto.marca %>" height="200px" width="300px">
                      <% } %>
                </div>

                <div class="col-6 d-flex flex-column text-center p-4">
                  <h1><%= auto.marca %> <%= auto.modelo %></h1>

                <h2></h2>
                <div  class="mt-auto"  style="height: 50px;">
                
                  <a href="/addToCart/<%= auto.codAD0KM %>"  class="btn btn-outline-dark small">Comprar</a>
                  <a href="/autos/<%= auto.codAD0KM %>" class="btn btn-outline-dark small">Ver</a>
                </div>

                </div>
              </div>
              </div>
          <% }); %>

       

      </div>

      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a>
  </div>


    <h1 class="text-center text-light pt-5">Que producto deseas comprar?</h1>
    <div class="container vh-100">
      <div class="row h-100 justify-content-center ">
       
        <div class="col-sm-6 col-md-4 col-lg-3 p-2 d-flex pt-5">
          <div class="card text-center w-100" style="background-color: rgba(8, 9, 17, 0.705); height: 300px;">
            <div>
              <img src="images/autos/chevrolet.jpg" class="card-img-top" alt="" height="150px">
              <div class="card-body">
                <h3 class="text-light font-weight-bold text-decoration-none">Autos</h3>
              </div>
            </div>
           
           <div class="mx-auto ">
            <a href="/autos" class="m-3 p-1 btn btn-outline-light text-center text-decoration-none w-75" style="height: 30px;">
              <p class="small"> Ver más</p>
            </a>
           </div>
          </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 p-2 d-flex pt-5">
          <div class="card text-center w-100" style="background-color: rgba(8, 9, 17, 0.705); height: 300px;">
            <div>
              <img src="images/productos/llantas.jpg" class="card-img-top" alt="" height="150px">
              <div class="card-body">
                <h3 class="text-light font-weight-bold text-decoration-none">Productos</h3>
              </div>
            </div>
           
           <div class="mx-auto ">
            <a href="/products" class="m-3 p-1 btn btn-outline-light text-center text-decoration-none w-75" style="height: 30px;">
              <p class="small"> Ver más</p>
            </a>
           </div>
          </div>
        </div>
       
      </div>
    </div>
  </div>
  
 


  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  
  <%- include('footer') %>
</body>
</html>
